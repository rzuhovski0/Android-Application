<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.profile.SetUpServicesTestingActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/numOfCategoriesEditText"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/rounded"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/sen"
        android:hint="3"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutForCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numOfCategoriesEditText"></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>