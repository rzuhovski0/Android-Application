<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/subcategoryNameTextViewInSubservices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_no_underline"
                android:hint="@string/service"
                android:inputType="textPersonName"
                android:fontFamily="@font/sen"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/DescriptionTextViewInSubServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_no_underline"
                android:fontFamily="@font/sen"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:hint="@string/service_description"
                android:ellipsize="end"
                android:maxWidth="300dp"
                android:singleLine="false"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/subcategoryNameTextViewInSubservices"
                app:layout_constraintTop_toBottomOf="@+id/subcategoryNameTextViewInSubservices" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/priceTextViewInSubServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/edit_text_no_underline"
                android:backgroundTint="#D9D9D9"
                android:fontFamily="@font/sen"
                android:hint="@string/price"
                android:inputType="number"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/subcategoryNameTextViewInSubservices"
                app:layout_constraintTop_toTopOf="@+id/subcategoryNameTextViewInSubservices" />

            <TableRow
                android:id="@+id/hr"
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#CCCCCC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/DescriptionTextViewInSubServices" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>